#!/usr/bin/env perl

use Rex::ShellExtension;
require Rex::Args;

$Rex::Args::CLEANUP = 0;

my $command = "run";

my $r = Rex::ShellExtension->new;

my $exit_code = 0;

unshift @ARGV, "find";

my @new_argv;
my $be_local = 0;

for (@ARGV) {
   if(m/\-L/) {
      $be_local = 1;
   }
   else {
      push @new_argv, $_;
   }
}

@ARGV = @new_argv;

print "" . $r->call($command, join_argv => " ", local_execution => $be_local) . "\n";

exit $?;
