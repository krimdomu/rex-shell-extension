#!/usr/bin/env perl

use Rex::ShellExtension;

my $command = "umount";

my $r = Rex::ShellExtension->new;

my $exit_code = 0;

eval {
   $exit_code = $r->call($command, mod_args => sub {
      my ($key, $val) = @_;
      if($val == 1) {
         return undef;
      }

      return $val;
   });
   1;
} or do {
   print STDERR "$@\n";
   $exit_code = 1;
};


exit $exit_code;
